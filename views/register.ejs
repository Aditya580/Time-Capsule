<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body class="flex items-center justify-center min-h-screen bg-gray-900">
  <div class="flex w-full max-w-4xl rounded-lg shadow-lg bg-white overflow-hidden">

    <!-- Left Side -->

    <div class="w-1/2 bg-gradient-to-r from-blue-100 to-blue-300 flex items-center justify-center p-10">
      <div class="text-center">
        <h2 class="text-2xl font-bold text-gray-700 mb-4">Welcome to Our Service</h2>
        <img src="https://via.placeholder.com/250" alt="Illustration" class="mx-auto">
      </div>
    </div>

    <!-- Right Side -->
    <div class="w-1/2 p-10 flex flex-col justify-center">
      <h1 class="text-3xl font-extrabold mb-4 text-gray-800">Create Account</h1>

      <!-- Google Sign Up Button -->
      <!-- <div class="flex space-x-4 mb-4">
        <button class="w-full bg-white text-gray-600 border border-gray-200 py-4 rounded hover:bg-gray-100 transition duration-300">
          <img src="https://img.icons8.com/color/20/000000/google-logo.png" class="inline-block mr-3" />
          Sign up with Google
        </button>
      </div>

      <div class="text-center text-gray-400 mb-4">OR</div> -->

      <!-- Registration Form -->
      <form action="/users/register" method="post">
        <div class="mb-4">
          <label for="fullname"  class="block text-sm font-medium text-gray-700">USER NAME</label>
          <input type="text" id="fullname" name="username" class="w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring focus:ring-blue-300" required>
        </div>
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
          <input type="email" id="email" name="email" class="w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring focus:ring-blue-300" required>
        </div>
        <div class="mb-6">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" id="password" name="password" class="w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring focus:ring-blue-300" required>
        </div>

        <button type="submit" class="w-full bg-blue-500 text-white font-semibold py-2 rounded-md hover:bg-blue-600 transition duration-300">Create Account</button>

        <div class="mt-4 text-center">
          <span class="text-sm text-gray-600">Already have an account? <a href="/login" class="text-purple-700 hover:text-purple-500">Login</a></span>
        </div>
      </form>
    </div>
  </div>
</body>

</html>
