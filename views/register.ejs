<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

  <style>
    /* Hides both horizontal and vertical scrollbars for webkit-based browsers (Chrome, Safari, etc.) */
    html::-webkit-scrollbar {
      display: none;
    }

    /* Hides both horizontal and vertical scrollbars for Firefox */
    html {
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    /* Background pattern for page */
    body {
      background-color: #010824; /* Matching background color */
      background-image: url("https://i.pinimg.com/1200x/94/ac/d8/94acd82615c05312b39886aa412a887e.jpg");
      object-fit: cover;
    }

    /* Hiding the Scrollbar for the body */
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    /* Fixed gradient circle */
    .gradient-circle {
      position: fixed;
      width: 480px;
      height: 400px;
      background: linear-gradient(to right, #15f809, #27bbec);
      top: -200px;
      left: 50%;
      transform: translateX(-50%);
      filter: blur(250px);
      border-radius: 50%;
      z-index: -1;
    }

  </style>
</head>

<body>

  <!-- Background Gradient Circle -->
  <div class="gradient-circle"></div>

  <div class="flex w-full max-w-4xl rounded-lg shadow-lg bg-white overflow-hidden">
    
    <!-- Left Side -->
    <div class="w-1/2 bg-gradient-to-r flex items-center justify-center p-10">
      <div class="text-center">
        
        <img  src="https://i.pinimg.com/1200x/ae/51/f3/ae51f393d238aee24ac61c939489c83e.jpg" alt="img" class="mx-auto">
      </div>
    </div>
    

    <!-- Right Side -->
    <div class="w-1/2 p-10 flex flex-col justify-center">
      <h1 class="text-3xl font-extrabold mb-4 text-gray-800">Create Account</h1>

      <!-- Registration Form -->
      <form action="/users/register" method="post">
        <div class="mb-4">
          <label for="fullname" class="block text-sm font-medium text-gray-700">USER NAME</label>
          <input type="text" id="fullname" name="username" class="w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring focus:ring-blue-300" required>
        </div>
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
          <input type="email" id="email" name="email" class="w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring focus:ring-blue-300" required>
        </div>
        <div class="mb-6">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" id="password" name="password" class="w-full border-gray-300 rounded-md shadow-sm p-2 focus:ring focus:ring-blue-300" required>
        </div>

        <button type="submit" class="w-full bg-blue-500 text-white font-semibold py-2 rounded-md hover:bg-blue-600 transition duration-300">Create Account</button>

        <div class="mt-4 text-center">
          <span class="text-sm text-gray-600">Already have an account? <a href="/login" class="text-purple-700 hover:text-purple-500">Login</a></span>
        </div>
      </form>
    </div>
  </div>

</body>

</html>