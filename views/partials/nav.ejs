<header class="flex items-center justify-between sticky top-0 bg-transparent text-white py-3 px-4 z-50" style="position: relative; top:-2vw">
    <nav class="flex items-center justify-between w-full">
        <!-- Logo and Title -->
        <div class="flex flex-col items-center">
            <a href="/">
                <img src="https://i.im.ge/2024/12/15/zPcdof.Time-Capsule-Logo-removebg-preview.png" 
                     alt="Time Capsule Logo" 
                     class="w-12 h-auto sm:w-14 md:w-16 lg:w-20">
            </a>
            <div class="text-base sm:text-lg md:text-xl font-semibold mt-2 " style="position: relative; top: -1vw; ">Time Trace</div>
        </div>

        <!-- Register and Login Links -->
        <div class="hidden md:flex space-x-3">
            <a href="/profile">
                <img src="https://png.pngtree.com/png-vector/20190223/ourmid/pngtree-profile-line-black-icon-png-image_691065.jpg" 
                     alt="Profile Icon" 
                     class="w-8 h-8 rounded-full">
            </a>
            <a href="/" class="bg-blue-600 hover:bg-blue-500 text-white px-3 py-1 rounded-md text-sm transition-colors">Log Out</a>
            <a href="/login" class="border-2 border-white hover:bg-white hover:text-blue-600 text-white px-3 py-1 rounded-md text-sm transition-colors">Log In</a>
        </div>

        <!-- Hamburger Menu for Mobile -->
        <div class="md:hidden flex items-center">
            <button id="menuButton" class="text-white focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden bg-gray-800 text-white w-full p-4 space-y-4">
        <div class="flex flex-col space-y-3">
            <a href="/profile">
                <img src="https://png.pngtree.com/png-vector/20190223/ourmid/pngtree-profile-line-black-icon-png-image_691065.jpg" 
                     alt="Profile Icon" 
                     class="w-10 h-10 mx-auto rounded-full">
            </a>
            <a href="/" class="bg-blue-600 hover:bg-blue-500 text-white px-3 py-2 rounded-md text-sm text-center transition-colors">Log Out</a>
            <a href="/login" class="border-2 border-white hover:bg-white hover:text-blue-600 text-white px-3 py-2 rounded-md text-sm text-center transition-colors">Log In</a>
        </div>
    </div>
</header>

<script>
  // Toggle mobile menu visibility
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');
  
  menuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>






