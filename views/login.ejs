<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Hides both horizontal and vertical scrollbars for webkit-based browsers (Chrome, Safari, etc.) */
    html::-webkit-scrollbar {
      display: none;
    }

    /* Hides both horizontal and vertical scrollbars for Firefox */
    html {
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    /* Background pattern for page */
    body {
      /* background-color: #010824; Matching background color */
      /* background-image: repeating-linear-gradient(to right, transparent 0 49px, #eee1 49px 50px), */
        /* repeating-linear-gradient(to bottom, transparent 0 49px, #eee1 49px 50px); */
        background-image: url(https://i.pinimg.com/1200x/94/ac/d8/94acd82615c05312b39886aa412a887e.jpg);
        /* background-repeat: no-repeat; */
        /* background-attachment: fixed ;
        background-size: 100% 110% ; */
    }

    /* Fixed gradient circle */
    .gradient-circle {
      position: fixed;
      width: 480px;
      height: 400px;
      background: linear-gradient(to right, #15f809, #27bbec);
      top: -200px;
      left: 50%;
      transform: translateX(-50%);
      filter: blur(250px);
      border-radius: 50%;
      z-index: -1;
    }

  </style>
</head>

<body class="flex items-center justify-center min-h-screen">

  <!-- Background Gradient Circle -->
  <div class="gradient-circle"></div>

  <div class="flex w-full max-w-4xl rounded-lg shadow-lg bg-white overflow-hidden">

    <!-- Left Side: Welcome Section -->
    <div class="w-1/2 bg-gradient-to-r from-blue-900 to-blue-700 flex items-center justify-center text-white p-10" style="background-image: url(https://images.rawpixel.com/image_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDI0LTAxL3Jhd3BpeGVsX29mZmljZV80MF8zZF9pbGx1c3RyYXRpb25fb2ZfYXN0cm9uYXV0X19pbl9zcGFjZV9iYWNrZ181ZDgzOTIwZi1hNjVhLTQ0ZGYtYmFjNy0wZTQxYzg0ODMzZGNfMi5qcGc.jpg);     background-repeat: no-repeat; background-size: 100% 140%;">
      <h2 class="text-3xl font-extrabold text-black">Welcome Back!</h2>
    </div>

    <!-- Right Side: Login Section -->
    <div class="w-1/2 p-10 flex flex-col justify-center">
      <h1 class="text-2xl font-bold text-gray-800 mb-4">Login</h1>
      <p class="text-sm text-gray-600 mb-6">Welcome back! Please login to your account.</p>

      <form action="/users/login" method="POST">
        <!-- Username -->
        <div class="mb-4">
          <label for="username" class="block text-sm font-medium text-gray-700">User Name</label>
          <input type="text" id="username" name="username" placeholder="username" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <!-- Password -->
        <div class="mb-6">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" placeholder="******" id="password" name="password" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="flex justify-between items-center mb-6">
          <label class="flex items-center text-sm text-gray-600">
            <input type="checkbox" class="mr-2"> Remember Me
          </label>
          <a href="/forget" class="text-sm text-blue-600 hover:text-blue-800">Forgot Password?</a>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="w-full bg-blue-600 text-white font-bold py-3 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
          Login
        </button>
      </form>

      <!-- Signup -->
      <div class="text-center mt-6">
        <p class="text-sm text-gray-600">
          New User? <a href="/register" class="text-blue-600 font-semibold hover:text-blue-800">Signup</a>
        </p>
      </div>
    </div>
  </div>

</body>

</html>